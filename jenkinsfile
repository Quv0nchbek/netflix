pipeline {
    agent any
    environment {
        TRIVY_VERSION = "0.59.0"  // Trivy versiyasi
    }
    stages {
        stage('Checkout Code') {
            steps {
                // Kodingizni Git-dan olib kelish
                git 'https://github.com/your-repo/your-project.git'
            }
        }
        
        stage('Install Trivy') {
            steps {
                script {
                    // Trivy'ni o'rnatish (agar avval o'rnatilmagan bo'lsa)
                    sh '''
                    if ! command -v trivy &> /dev/null; then
                        echo "Trivy is not installed. Installing..."
                        wget https://github.com/aquasecurity/trivy/releases/download/v$TRIVY_VERSION/trivy_Linux-64bit.tar.gz
                        tar -xvzf trivy_Linux-64bit.tar.gz
                        sudo mv trivy /usr/local/bin/
                    else
                        echo "Trivy is already installed."
                    fi
                    '''
                }
            }
        }

        stage('Run Trivy Scan') {
            steps {
                script {
                    // Trivy skanerlashni boshlash
                    echo "Running Trivy scan on the project..."
                    sh 'trivy fs . > trivyfs.txt'
                }
            }
        }

        stage('Publish Results') {
            steps {
                script {
                    // Trivy skanerlash natijalarini tekshirish va natijalarni chiqarish
                    echo "Trivy scan results: "
                    sh 'cat trivyfs.txt'
                }
            }
        }
    }

    post {
        always {
            // Ish tugagandan keyin bajariladigan ishlar (masalan, tozalash)
            cleanWs()
        }
    }
}
